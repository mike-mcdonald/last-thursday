{
    "name": "drupal-composer/drupal-project",
    "description": "Project template for Drupal 8 projects with composer",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [{
        "name": "",
        "role": ""
    }],
    "repositories": [{
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mike-mcdonald/pbot-theme"
        },
        {
            "type": "vcs",
            "url": "https://github.com/mike-mcdonald/drupal-bootstrap"
        },
        {
            "type": "vcs",
            "url": "git@bitbucket.org:mikesonaplane/pog_connect.git"
		},
		{
			"type": "vcs",
			"url": "ssh://git@localhost:122/mike-mcdonald/esri_geofield.git"
		},
		{
			"type": "vcs",
			"url": "https://github.com/acquia/lightning-dev"
		},
		{
			"type": "composer",
			"url": "https://asset-packagist.org"
		}
    ],
    "require": {
        "acquia/lightning": "~3.0.0",
        "bower-asset/cropper": "^2.3",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/address": "^1.3",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/adminimal_theme": "^1.3",
        "drupal/auto_entitylabel": "^2.1@beta",
        "drupal/bootstrap_layouts": "^5.0",
        "drupal/config_filter": "^1.1",
        "drupal/config_split": "^1.3",
        "drupal/console": "^1.0.2",
        "drupal/content_sync": "^1.2",
        "drupal/core": "~8.4",
        "drupal/ctools": "^3.0",
        "drupal/ds": "^3.1",
        "drupal/entity_browser": "^2.0",
        "drupal/field_group": "^1.0",
        "drupal/geocoder": "^2.0@alpha",
        "drupal/geofield": "^1.0@alpha",
        "drupal/lightning_media": "1.0.0-alpha2",
        "drupal/message": "^1.0@RC",
        "drupal/metatag": "^1.4",
        "drupal/page_manager": "^4.0@beta",
        "drupal/pathauto": "^1.0",
        "drupal/physical": "^1.0@RC",
        "drupal/profile": "^1.0@RC",
        "drupal/rng": "^1.5",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/token": "^1.0",
        "drupal/views_data_export": "^1.0@alpha",
        "drupal/views_bootstrap": "^3.0",
        "drush/drush": "~8.0|^9.0.0-beta8",
        "pdx/bootstrap": "dev-8.x-3.x",
        "pdx/pbot-theme": "dev-master",
        "pdx/pog_connect": "dev-master",
        "roave/security-advisories": "dev-master",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "require-dev": {
        "behat/mink": "~1.7",
        "behat/mink-goutte-driver": "~1.2",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/css-selector": "~2.8|~3.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/libraries/{$name}": ["type:drupal-library"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/profiles/contrib/{$name}": ["type:drupal-profile"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "drush/contrib/{$name}": ["type:drupal-drush"]
		},
		"merge-plugin": {
			"require": [
			  "web/modules/custom/pdx_geocoder/composer.json"
			]
		  }
    }
}
