{
    "name": "mike-mcdonald/last-thursday",
    "description": "A drupal site for Last Thursdays on Alberta",
    "type": "project",
    "license": "GPL-2.0+",
    "authors": [
        {
            "name": "Mike McDonald",
            "role": "maintainer"
        }
    ],
    "repositories": {
        "0": {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        },
        "1": {
            "type": "vcs",
            "url": "git@bitbucket.org:mike-mcdonald/pbot-theme.git"
        },
        "2": {
            "type": "vcs",
            "url": "https://github.com/mike-mcdonald/drupal-bootstrap"
        },
        "3": {
            "type": "vcs",
            "url": "git@bitbucket.org:mike-mcdonald/pog-connect.git"
        },
        "4": {
            "type": "vcs",
            "url": "git@bitbucket.org:mike-mcdonald/esri-geofield.git"
        },
        "5": {
            "type": "vcs",
            "url": "https://github.com/acquia/lightning-dev"
        },
        "6": {
            "type": "composer",
            "url": "https://asset-packagist.org"
        }
    },
    "require": {
        "acquia/lightning": "~3.0.0",
        "bower-asset/cropper": "^2.3",
        "composer/installers": "^1.2",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.2",
        "drupal/address": "^1.3",
        "drupal/adminimal_admin_toolbar": "^1.5",
        "drupal/adminimal_theme": "^1.3",
        "drupal/auto_entitylabel": "^2.1@beta",
        "drupal/bootstrap": "^3.10",
        "drupal/bootstrap_layouts": "^5.0",
        "drupal/bootstrap_paragraphs": "^2.0@beta",
        "drupal/config_filter": "^1.1",
        "drupal/config_split": "^1.3",
        "drupal/config_direct_save": "^1.0",
        "drupal/config_installer": "^1.0",
        "drupal/console": "^1.0.2",
        "drupal/content_sync": "^1.2",
        "drupal/core": "^8.4",
        "drupal/ctools": "^3.0",
        "drupal/ds": "^3.1",
        "drupal/email_registration": "^1.0@RC",
        "drupal/entity_browser": "^2.0",
        "drupal/feeds": "^3.0@alpha",
        "drupal/field_group": "^1.0",
        "drupal/geocoder": "^2.0@alpha",
        "drupal/geofield": "^1.0@alpha",
        "drupal/lightning_media": "1.0.0-alpha2",
        "drupal/message": "^1.0@RC",
        "drupal/metatag": "^1.4",
        "drupal/page_manager": "^4.0@beta",
        "drupal/pathauto": "^1.0",
        "drupal/physical": "^1.0@RC",
        "drupal/profile": "^1.0@RC",
        "drupal/restui": "^1.15",
        "drupal/rules": "^3.0@alpha",
        "drupal/swiftmailer": "^1.0@beta",
        "drupal/token": "^1.0",
        "drupal/views_bootstrap": "^3.0",
        "drupal/views_data_export": "^1.0@alpha",
        "drush/drush": "~8.0|^9.0.0-beta8",
        "pdx/bootstrap": "dev-8.x-3.x",
        "pdx/pbot-theme": "dev-master",
        "pdx/pog_connect": "dev-master",
        "roave/security-advisories": "dev-master",
        "webflo/drupal-finder": "^1.0.0",
        "webmozart/path-util": "^2.3",
        "wikimedia/composer-merge-plugin": "^1.4",
        "rvtraveller/qs-composer-installer": "^1.1",
        "drush-ops/behat-drush-endpoint": "^8",
        "pantheon-systems/quicksilver-pushback": "~1",
        "webflo/drupal-core-strict": "^8",
        "zaporylie/composer-drupal-optimizations": "^1.0"
    },
    "require-dev": {
        "behat/behat": "3.*",
        "behat/mink": "~1.7",
        "behat/mink-extension": "^2.2",
        "behat/mink-goutte-driver": "~1.2",
        "drupal/drupal-extension": "^3.1",
        "jcalderonzumba/gastonjs": "~1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "~0.3.1",
        "mikey179/vfsstream": "~1.2",
        "phpunit/phpunit": ">=4.8.28 <5",
        "symfony/css-selector": "~2.8|~3.0"
    },
    "conflict": {
        "drupal/drupal": "*"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "platform": {
            "php": "7.0.8"
        }
    },
    "autoload": {
        "classmap": [
            "scripts/composer/ScriptHandler.php"
        ]
    },
    "scripts": {
        "build-assets": [
            "@prepare-for-pantheon",
            "composer install --optimize-autoloader --no-dev"
        ],
        "lint": "find web/modules/custom web/themes/custom -name '*.php' -exec php -l {} \\;",
        "code-sniff": "echo 'No code sniff step defined.'",
        "unit-test": "echo 'No unit test step defined.'",
        "drupal-scaffold": "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
        "prepare-for-pantheon": "DrupalProject\\composer\\ScriptHandler::prepareForPantheon",
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
            "find .circleci/scripts/pantheon/ -type f | xargs chmod 755",
            "find tests/scripts/ -type f | xargs chmod 755"
        ],
        "post-create-project-cmd": [
            "@drupal-scaffold",
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ]
    },
    "extra": {
        "installer-paths": {
            "web/core": [
                "type:drupal-core"
            ],
            "web/libraries/{$name}": [
                "type:drupal-library"
            ],
            "web/modules/contrib/{$name}": [
                "type:drupal-module",
                "type:drupal-custom-module"
            ],
            "web/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "web/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "build-env": {
            "install-cms": [
                "drush site-install standard --account-mail={account-mail} --account-name={account-name} --account-pass={account-pass} --site-mail={site-mail} --site-name={site-name} --yes",
                "drush pm-enable config_direct_save simple_block --yes",
                "drush pm-uninstall block_content --yes"
            ],
            "export-configuration": "drush config-export --yes"
        },
        "drupal-scaffold": {
            "source": "https://raw.githubusercontent.com/pantheon-systems/drops-8-scaffolding/{version}/{path}",
            "includes": [
                "sites/default/default.services.pantheon.preproduction.yml",
                "sites/default/settings.pantheon.php"
            ],
            "excludes": [
                ".csslintrc",
                ".editorconfig",
                ".eslintignore",
                ".eslintrc.json",
                ".htaccess",
                "web.config"
            ]
        },
        "merge-plugin": {
            "require": [
                "web/modules/custom/pdx_geocoder/composer.json"
            ]
        }
    }
}
