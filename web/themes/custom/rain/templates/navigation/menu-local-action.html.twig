{#
/**
 * @file
 * Theme override for a single local action link.
 *
 * Available variables:
 * - attributes: HTML attributes for the wrapper element.
 * - link: A rendered link element.
 *
 * @see template_preprocess_menu_local_action()
 */
#}
{%
  set action_classes = action_classes|default([
    'bg-cyan',
    'appearance-none',
    'cursor-pointer',
    'border-2',
    'border-cyan-darker',
    'rounded-lg',
    'py-2',
    'px-4',
    'text-white',
    'leading-tight',
    'focus:outline-none',
    'focus:bg-cyan-dark',
    'focus:border-cyan-darker',
    'hover:border-cyan',
  ])
%}
<span{{ attributes.addClass(action_classes) }}>
  {{ link }}
</span>
